<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <TextView
                android:text="Uniwersalny Konwerter"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />


            <TextView
                android:text="Konwerter Długości (metry)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/input_value_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wprowadź długość w metrach"
                android:inputType="numberDecimal"
                android:backgroundTint="#3F51B5"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/convert_button_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konwertuj Długość"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/output_text_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wyniki konwersji długości pojawią się tutaj"
                android:textColor="#777777"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="#E0E0E0" />

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Sekcja konwertera masy -->
            <TextView
                android:text="Konwerter Masy (kilogramy)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/input_value_mass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wprowadź wartość w kilogramach"
                android:inputType="numberDecimal"
                android:backgroundTint="#3F51B5"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/convert_button_mass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konwertuj Masę"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/output_text_mass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wyniki konwersji masy pojawią się tutaj"
                android:textColor="#777777"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="#E0E0E0" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
