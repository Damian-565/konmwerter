<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:text="Konwerter Długości (metry)"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/input_value_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wprowadź długość w metrach"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/convert_button_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konwertuj Długość" />

        <TextView
            android:id="@+id/output_text_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Wyniki konwersji długości pojawią się tutaj"
            android:textSize="16sp" />


        <TextView
            android:text="Konwerter Masy (kilogramy)"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/input_value_mass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wprowadź wartość w kilogramach"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/convert_button_mass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konwertuj Masę" />

        <TextView
            android:id="@+id/output_text_mass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Wyniki konwersji masy pojawią się tutaj"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>